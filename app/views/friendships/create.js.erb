<% if @pending %>
    $(".friend_<%= user.id %> #friend_form").html("<%= escape_javascript(button_tag("Pending Request", type: "button", disabled: true)) %>");
<% else  %>
    
    $(".friend_<%= user.id %> .friend_request_<%= @user.id %>").html("(Friend)!");
    $(".friend_<%= user.id %> .friend_request_<%= @user.id %>").css('color','green');
    $(".friend_<%= user.id %> #friend_form").html("<%= escape_javascript(render('users/unfriend')) %>");
<% end %>

window.currentPostIndex = <%= @post.id %>;
(function(){
    let cs = $("#post_<%= @post.id %> .comments_section");
    let c = $("#post_<%=@post.id %> .comments");
    let a = $("#post_<%=@post.id %> .add_comment_button");
    let b = $("#post_<%=@post.id %> .comment_button");
    cs.toggleClass("js_visible");
    
        if (cs.hasClass("js_visible")){
            a.html("<%= j(button_tag("Add Comment", type: "button")) %>");
            <% if @comments.any? %>
                c.html("<%= escape_javascript(render(@comments)) %>");
            <% else %>
                c.html("No Comments!")
            <% end  %>
            b.val("Hide Comments");
            cs.slideDown();
        } else {
            cs.slideUp();
            b.val("View Comments");
        }
    
        
    
})();

<% if current_user != user_li%>
    <li class="user user_<%= user_li.id %>">
        <div class="user_item">
            <% if !user_li.new_record? %>
                <span class="avatar"><%= image_tag(user_li.get_avatar_url(:thumb))   %></span>
                <%= link_to user_li.username, user_path(user_li) %>
            <% end %>
        </div>   

        <div id="friend_request">
            <div id= "friend_form">
                <% if current_user != user_li%>
                    <span> <%= render partial: 'friend', locals: {user: user_li} %></span>
                <% end %>
            </div>
        </div>
    </li>
<% end %>

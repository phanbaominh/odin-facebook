<% if !/Pending/i.match?(current_user.get_friend_status(user))%>
    <%= button_tag(current_user.get_friend_status(user), class: "friend_button", data: {user_id: user.id}) %>
<% else %>
    <%= button_tag(current_user.get_friend_status(user), class: "friend_button", disabled: true, data: {user_id: user.id}) %>
<% end %>


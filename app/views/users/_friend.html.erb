<% if current_user.pending?(user)%>
    <%= button_tag "Pending request", type: "button", disabled: true %>
<% elsif current_user.friend?(user) %>
    <%= render partial: 'unfriend', locals: {user: user} %>
<% elsif user.pending?(current_user)%>
    <%= render partial: 'accept_friend', locals: {user: user} %>
<% else%>
    <%= render partial: 'add_friend', locals: {user: user} %>
<% end %>


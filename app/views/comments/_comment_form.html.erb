<%= form_with model: post.comments.build, url: post_comments_path(post), local: true  do |f|%>

    <%= render 'shared/error', object: f.object %>
    <div class="field">
        <%= f.text_area :content, placeholder: "Compose new comment..." %>
    </div>
    <p>
        <%= f.submit "Save comment" %>
    </p>
<% end %>
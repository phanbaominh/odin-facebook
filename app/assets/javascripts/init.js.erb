class Context{
    constructor(node){
        this.node = node;
    }
    has_controller(ctrl){
        return this.node.hasClass("c_" + ctrl);
    }
    has_action(act){
        return this.node.hasClass("a_" + act);
    }
}
let context;
$(document).on("turbolinks:load", () =>{
    context = new Context($('body'));
});

